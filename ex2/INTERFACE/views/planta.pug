extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Informacao da planta #{planta._id}
    .w3-container
        p Registo nº #{planta.Numero_de_Registo}
        p Rua: #{planta.Rua}
        p Local: #{planta.Local}
        p Freguesia: #{planta.Freguesia}
        p Espécie: #{planta.Especie.nome}
        p Nome cientifico: #{planta.Nome_Cientifico}
        p Origem: #{planta.Origem}
        p Data de plantacao: #{planta.Data_de_Plantacao}
        p Estado: #{planta.Estado}
        p Caldeira: #{planta.Caldeira}
        p Tutor: #{planta.Tutor}
        p Implantacao: #{planta.Implantacao}
        p Gestor: #{planta.Gestor}
        p Data de atualizacao: #{planta.Data_de_actualizacao}
        p Nº de intervencoes: #{planta.Numero_de_intervencoes}
